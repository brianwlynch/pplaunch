{
  "name": "pplaunch",
  "productName": "TFC Public Panel Launcher",
  "version": "3.0.12",
  "description": "Loading screen for TFC Touchscreens",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build": "npm run update-footer && electron-builder",
    "update-footer": "node update-footer.js"
  },
  "keywords": [],
  "author": "NEP Group, Brian Lynch",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-store": "^10.0.1",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-wix": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "36.3.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "TFC Public Panel Launcher",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/images/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "installerIcon": "src/assets/images/icon.ico",
      "uninstallerIcon": "src/assets/images/icon.ico",
      "uninstallDisplayName": "TFC Public Panel Launcher",
      "license": "license.md",
      "allowToChangeInstallationDirectory": false
    }
  }
}
